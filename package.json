{
	"name": "javac-linter",
	"displayName": "Java Linter",
	"description": "Java Linter for VS Code",
	"version": "1.3.0",
	"icon": "images/icon.png",
	"publisher": "faustinoaq",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/faustinoaq/vscode-javac-linter"
	},
	"bugs": "https://github.com/faustinoaq/vscode-javac-linter/issues",
	"engines": {
		"vscode": "^1.5.0"
	},
	"galleryBanner": {
		"color": "#da2f30",
		"theme": "dark"
	},
	"keywords": [
		"java",
		"lint",
		"error",
		"javac"
	],
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:java"
	],
	"main": "./out/src/Main",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Javac Linter configuration",
			"properties": {
				"javac-linter.enable": {
					"type": "boolean",
					"default": true,
					"description": "enable/disable the java-linter without restart."
				},
				"javac-linter.javac": {
					"type": "string",
					"default": "javac",
					"description": "Location of Java compiler executable."
				},
				"javac-linter.classpath": {
					"type": "array",
					"default": [
						"."
					],
					"items": {
						"type": "string"
					},
					"description": "Location of Java classpath, first path is used as class destination."
				},
				"javac-linter.maxNumberOfProblems": {
					"type": "number",
					"default": 20,
					"description": "Controls the maximum number of problems produced by the server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.7.2",
		"vscode": "^1.1.10",
		"mocha": "^3.5.0",
		"@types/node": "^8.0.26",
		"@types/mocha": "^2.2.42"
	}
}
